<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
              background-color: #c8ddf5;
            color: #4e4e4e;
            padding: 20px;
        }

        .container {
            max-width: 800px;
            margin: auto;
            background: #fff;
            border-radius: 12px;
            padding: 30px 40px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
        }

        h1 {
            text-align:center;
            margin-bottom: 20px;
            color: #272727;
        }

        form {
            display: flex;
            gap: 10px;
            margin-bottom: 30px;
        }

        input[type="text"] {
            width:50%
            flex: 1;
            padding: 12px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 8px;
            transition: border-color 0.3s;
        }

        input[type="text"]:focus {
            outline: none;
            border-color: #0066ff;
        }

        button {
            padding: 12px 20px;
            background-color: #0066ff;
            color: #fff;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            cursor: pointer;
            transition: background 0.3s;
        }

        button:hover {
            background-color: #0051cc;
        }

        .short-url {
            background-color: #e8f0ff;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 16px;
            text-align: center;
        }

        .short-url a {
            color: #0066ff;
            text-decoration: none;
            font-weight: bold;
        }

        table {
            width: 50%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            text-align: left;
            padding: 12px;
            border-bottom: 1px solid #eee;
        }

        th {
            background-color: #f5f5f5;
            font-weight: bold;
        }

        a {
            color: #0066ff;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        @media (max-width: 600px) {
            form {
                flex-direction: column;
            }

            button {
                width: 100%;
            }

            input[type="text"] {
                width: 100%;
            }
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
</head>
<body>
    <h1>URL Shortener</h1>

    <% if (typeof id !== 'undefined') { %>
        <p>Your shortened URL is:
            <a href="/<%= id %>">http://localhost:8001/<%= id %></a>
        </p>
    <% } %>

    <div>
        <form method="POST" action="/url">
            <label>Enter your original URL</label><br>
            <input type="text" name="url" placeholder="Enter URL here" required>
            <button type="submit">Generate URL</button>
        </form>
    </div>

    <% if (urls && urls.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>S.No</th>
                    <th>Short URL</th>
                    <th>Redirect URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% urls.forEach((url, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><a href="/<%= url.shortid %>">http://localhost:8001/<%= url.shortid %></a></td>
                        <td><a href="<%= url.redirectUrl %>"><%= url.redirectUrl %></a></td>
                        <td><%= url.visitHistory.length %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } %>
</body>
</html>
