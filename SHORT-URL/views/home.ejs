<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: #333;
            margin: 0;
            padding: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #eee;
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
</head>
<body>
    <h1>URL Shortener</h1>

    <% if (typeof id !== 'undefined') { %>
        <p>Your shortened URL is:
            <a href="/<%= id %>">http://localhost:8001/<%= id %></a>
        </p>
    <% } %>

    <div>
        <form method="POST" action="/url">
            <label>Enter your original URL</label><br>
            <input type="text" name="url" placeholder="Enter URL here" required>
            <button type="submit">Generate URL</button>
        </form>
    </div>

    <% if (urls && urls.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>S.No</th>
                    <th>Short URL</th>
                    <th>Redirect URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% urls.forEach((url, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><a href="/<%= url.shortid %>">http://localhost:8001/<%= url.shortid %></a></td>
                        <td><a href="<%= url.redirectUrl %>"><%= url.redirectUrl %></a></td>
                        <td><%= url.visitHistory.length %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } %>
</body>
</html>
